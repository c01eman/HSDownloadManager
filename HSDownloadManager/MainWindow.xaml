<Window x:Class="HSDownloadManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Grid x:Name="grid" ShowGridLines="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="121*"/>
			<ColumnDefinition Width="117*"/>
			<ColumnDefinition Width="137*"/>
			<ColumnDefinition Width="36*"/>
			<ColumnDefinition Width="106*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="41"/>
			<RowDefinition Height="29"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Column="0" Grid.ColumnSpan="5" FontSize="22" Grid.RowSpan="3">Horrible Subs Download Manager</TextBlock>
		<Button Click="Add_Button_Click" Grid.Column="3" Grid.ColumnSpan="2" >Add Show</Button>
		<TextBlock HorizontalAlignment="Center" Grid.Row="1" Text="Name" FontWeight="Bold"/>
		<TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Text="Next Episode" FontWeight="Bold"/> 
		<TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Text="Air Date" FontWeight="Bold"/> 
		<TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3" Text="Edit" FontWeight="Bold"/>
		<TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="4" Text="Delete" FontWeight="Bold"/>
	</Grid>
</Window>
